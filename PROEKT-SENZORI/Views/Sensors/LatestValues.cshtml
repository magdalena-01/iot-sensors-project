@model PROEKT_SENZORI.Models.DATA

<!-- Font Awesome for professional icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(to right top, #dfffd6, #f0fff4);
        margin: 0;
        padding: 0;
    }

    .realtime-wrapper {
        margin: 60px auto;
        max-width: 1000px;
        padding: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        backdrop-filter: blur(18px);
        -webkit-backdrop-filter: blur(18px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        text-align: center;
        animation: fadeInUp 1s ease forwards;
    }

        .realtime-wrapper h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2d572c;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 35px;
        }

    .sensor-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }

    .sensor-box {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 18px;
        padding: 30px 20px;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

        .sensor-box:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.2);
        }

    .sensor-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
        color: #3b7c2c;
    }

    .sensor-box h4 {
        font-size: 1.3rem;
        color: #244f26;
        margin-bottom: 8px;
    }

    .sensor-box p {
        font-size: 1.8rem;
        font-weight: 700;
        color: #0f3310;
        margin: 0;
    }

    .time-display {
        margin-top: 30px;
        font-size: 1rem;
        color: #444;
    }

    .no-data {
        font-size: 1.2rem;
        color: #b30000;
        padding-top: 20px;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="realtime-wrapper">
    <h2><i class="fas fa-seedling"></i> Real-Time Agri Sensor Dashboard</h2>

    @if (Model != null)
    {
        <div class="sensor-grid">
            <div class="sensor-box">
                <div class="sensor-icon"><i class="fas fa-thermometer-half"></i></div>
                <h4>Temperature</h4>
                <p>@Model.Sensor1 °C</p>
            </div>
            <div class="sensor-box">
                <div class="sensor-icon"><i class="fas fa-tint"></i></div>
                <h4>Humidity</h4>
                <p>@Model.Sensor2 %</p>
            </div>
            <div class="sensor-box">
                <div class="sensor-icon"><i class="fas fa-wind"></i></div>
                <h4>Airflow</h4>
                <p>@Model.Sensor3 m/s</p>
            </div>
            <div class="sensor-box">
                <div class="sensor-icon"><i class="fas fa-microscope"></i></div>
                <h4>Soil pH</h4>
                <p>@Model.Sensor4</p>
            </div>
        </div>

        <div class="time-display">
            ⏱️ <strong>Last Updated:</strong> @Model.Time
        </div>
    }
    else
    {
        <p class="no-data">🚫 No sensor data available at the moment.</p>
    }
</div>
